{{> db_header}}
<section class="content">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Form Validation</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Aero</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Voucher</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ul>
                    <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">                
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>                                
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <!-- Basic Validation -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">
                            <h2><strong>Chỉnh sửa</strong> voucher</h2>
                      
                        </div>
                        <div class="body">
                            <form id="form_validation" method="POST" action="/vouchers/{{voucher.voucherCode}}?_method=PATCH">
                                <div class="form-group form-float col-md-6">
                                    <input type="text" class="form-control" placeholder="Mã" value="{{voucher.voucherCode}}" name="voucherCode" required>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="text" class="form-control" placeholder="Tên" value="{{voucher.name}}" name="name" required>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="text" class="form-control" placeholder="Ngày hết hạn" value="{{voucher.expiryDate}}" name="expiryDate" required>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="text" class="form-control" placeholder="Số lượng" value="{{voucher.quantity}}" name="quantity" required>
                                </div>
                                 <div class="form-group form-float col-md-6">
                                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> db_footer}}