{{> db_header}}

<section class="content">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Profile</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Aero</a></li>
                        <li class="breadcrumb-item">Pages</li>
                        <li class="breadcrumb-item active">Profile</li>
                    </ul>
                    <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">                
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
                    <a href="profile-edit.html" class="btn btn-info btn-icon float-right"><i class="zmdi zmdi-edit"></i></a>
                </div>
            </div>
        </div> 
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-4 col-md-12" >
                    <div class="card mcard_3">
                        <div class="body">
                            <a href=""><img src="/uploads/img/{{curUser.image}}" class="rounded-circle shadow " alt="profile-image"></a>
                            <h4 class="m-t-10">{{curUser.name}}</h4>                            
                            <div class="row">
                                <div class="col-12">
                                    <ul class="social-links list-unstyled">
                                        <li><a title="facebook" href="javascript:void(0);"><i class="zmdi zmdi-facebook"></i></a></li>
                                        <li><a title="twitter" href="javascript:void(0);"><i class="zmdi zmdi-twitter"></i></a></li>
                                        <li><a title="instagram" href="javascript:void(0);"><i class="zmdi zmdi-instagram"></i></a></li>
                                    </ul>
                                    <p class="text-muted">{{curUser.address}}</p>
                                </div>
                                                        
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="body">
                            <small class="text-muted">Email address: </small>
                                    <p class="text-muted">{{curUser.email}}</p>
                            <p></p>
                            <hr>
                            <small class="text-muted">Phone: </small>
                            <p><p class="text-muted">{{curUser.phone}}</p></p>
                            <hr>
                         
                        </div>
                    </div>                    
                </div>
            <div class="col-lg-8 col-md-12">
              <div class="card">
                <div class="header">
                  <h2><strong>CHỈNH SỬA</strong> THÔNG TIN</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="POST" action="/profile/{{curUser.id}}?_method=PATCH" enctype="multipart/form-data">
                                <div class="form-group form-float col-md-8">
                                    <input type="text" class="form-control" placeholder="Họ tên" value="{{curUser.name}}" name="name" required>
                                </div>
                                <div class="form-group form-float col-md-8">
                                    <input type="text" class="form-control" placeholder="Email" value="{{curUser.email}}" name="email" required>
                                </div>
                                <div class="form-group form-float col-md-8">
                                    <input type="text" class="form-control" placeholder="Số điện thoại" value="{{curUser.phone}}" name="phone" required>
                                </div>
                                <div class="form-group form-float col-md-8">
                                    <textarea name="address" cols="30" rows="5" placeholder="Địa chỉ" class="form-control no-resize" required>{{curUser.address}}</textarea>
                                </div>
                                <div class="form-group form-float col-md-8">
                                    <input type="file" name="photo" class="form-control">
                                </div>
                                 <div class="form-group form-float col-md-8">
                                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                                </div>
                        
                               
                    </form>
                </div>
                
              </div>
              <div class="card">
                <div class="header">
                  <h2><strong>CHỈNH SỬA</strong> MẬT KHẨU</h2>
                </div>
                {{#if err}}
                <p style="color: red;">{{err}}</p>
                {{/if}}
                <div class="body">
                    <form id="form_validation" method="POST" action="/profile/{{curUser.id}}?_method=PATCH" enctype="multipart/form-data">
                                <div class="form-group form-float col-md-8">
                                    <input type="text" class="form-control" placeholder="Mật khẩu hiện tại" value="" name="curPassword" required>
                                </div>
                                <div class="form-group form-float col-md-8">
                                    <input type="text" class="form-control" placeholder="Mật khẩu mới" value="" name="newPassword" required>
                                </div>
                                 <div class="form-group form-float col-md-8">
                                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                                </div>
                    </form>
                </div>
              </div>
            </div>
            
            </div>
        </div>
    </div>
</section>

{{> db_footer}}