{{> db_header}}
<section class="content">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Form Validation</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Aero</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Sản phẩm</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa</li>
                    </ul>
                    <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">                
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>                                
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <!-- Basic Validation -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">
                            <h2><strong>Chỉnh sửa</strong> sản phẩm</h2>
                      
                        </div>
                        <div class="body">

                            <form id="form_validation" method="POST" action="/products/{{product.id}}?_method=PATCH" enctype="multipart/form-data">
                                <div class="form-group form-float col-md-6">
                                    <input type="text" class="form-control" placeholder="Tên sản phẩm" value="{{product.productName}}" name="productName" required>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="number" class="form-control" placeholder="Số lượng trong kho" value="{{product.quantityInStock}}" name="quantityInStock" required>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="number" class="form-control" placeholder="Giá bán" value="{{product.buyPrice}}" name="buyPrice" required>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="number" class="form-control" placeholder="Giá sản phẩm" value="{{product.productPrice}}" name="productPrice" required>
                                </div>
                                <div class="form-group form-float col-sm-6">
                                    <select name="categoryId" class="form-control show-tick">
                                        {{#with product.category}}
                                        <option value="{{id}}" selected> {{name}} </option>
                                        {{/with}}
                                        {{#each allCategory}}
                                            <option value="{{this.id}}">{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <textarea name="productDescription" cols="30" rows="5" placeholder="Mô tả" class="form-control no-resize" required>{{product.productDescription}}</textarea>
                                </div>
                                <div class="form-group form-float col-md-6">
                                    <input type="file" class="form-control">
                                </div>
                                 <div class="form-group form-float col-md-6">
                                    <button class="btn btn-raised btn-primary waves-effect" type="submit">SUBMIT</button>
                                </div>
                        
                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</section>
{{> db_footer}}